/* pages/articles/articles.wxss */

.articles-container {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 40rpx;
}

/* Header */
.articles-header {
  background: #ffffff;
  padding: 40rpx 48rpx 32rpx;
  border-bottom: 8rpx solid #000000;
  position: sticky;
  top: 0;
  z-index: 100;
}

.articles-nav {
  margin-bottom: 24rpx;
}

.articles-back-btn {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: inline-block;
}

.articles-title {
  font-size: 64rpx;
  font-weight: 900;
  color: #000000;
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: -2rpx;
  text-transform: uppercase;
}

.articles-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  display: block;
}

/* Loading */
.articles-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  margin-top: 24rpx;
}

/* Content */
.articles-content {
  padding: 32rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* Article Card */
.article-card {
  background: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 8rpx 8rpx 0 #000000;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.article-card:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 #000000;
}

.article-card-image {
  width: 100%;
  height: 360rpx;
  display: block;
  object-fit: cover;
}

.article-card-body {
  padding: 32rpx;
}

.article-card-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.article-card-tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.article-card-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #000000;
  line-height: 1.3;
  display: block;
  margin-bottom: 16rpx;
}

.article-card-summary {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.5;
  display: block;
  margin-bottom: 24rpx;
}

.article-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.article-card-time {
  font-size: 24rpx;
  font-weight: 600;
  color: #999999;
}

.article-card-arrow {
  font-size: 26rpx;
  font-weight: 700;
  color: #000000;
}

/* Article Detail */
.article-detail {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.article-detail-header {
  position: relative;
  height: 560rpx;
  overflow: hidden;
}

.article-detail-hero {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-detail-hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
}

.article-detail-title-wrapper {
  position: absolute;
  bottom: 48rpx;
  left: 48rpx;
  right: 48rpx;
  color: #ffffff;
}

.article-detail-tags {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.article-detail-tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.article-detail-title {
  font-size: 52rpx;
  font-weight: 900;
  line-height: 1.2;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.article-detail-meta {
  font-size: 24rpx;
  font-weight: 600;
  opacity: 0.9;
  display: block;
}

.article-detail-close {
  position: absolute;
  top: 48rpx;
  right: 48rpx;
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 4rpx solid #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.article-detail-close:active {
  transform: scale(0.95);
}

.article-detail-content {
  padding: 48rpx;
}

.article-section {
  margin-bottom: 56rpx;
}

.article-section:last-child {
  margin-bottom: 0;
}

.article-section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #000000;
  line-height: 1.3;
  display: block;
  margin-bottom: 20rpx;
}

.article-section-body {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.8;
  display: block;
  text-align: justify;
}
