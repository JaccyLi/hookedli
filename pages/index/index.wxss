/* SwabTheWorld Inspired Design - Bold & High Contrast */

/* Design Tokens */
page {
  background: #ffffff;
}

/* Container */
.swab-container {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 180rpx;
}

/* Top Navigation */
.swab-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 48rpx 32rpx;
  background: #ffffff;
  border-bottom: 8rpx solid #000000;
}

.swab-logo {
  font-size: 56rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: -2rpx;
  text-transform: uppercase;
}

.swab-nav-actions {
  display: flex;
  gap: 16rpx;
}

.swab-action-btn {
  width: 88rpx;
  height: 88rpx;
  background: #000000;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Hero Section */
.swab-hero {
  min-height: 32vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 48rpx 16rpx;
  background: #ffffff;
  text-align: center;
}

.swab-hero-title {
  font-size: 88rpx;
  font-weight: 900;
  color: #000000;
  line-height: 1;
  margin-bottom: 12rpx;
  letter-spacing: -4rpx;
  text-transform: uppercase;
  animation: gentleFloat 4s ease-in-out infinite;
}

.swab-hero-subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #666666;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.swab-hero-icon {
  font-size: 100rpx;
  margin-top: 8rpx;
  animation: wiggle 2s ease-in-out infinite;
  display: inline-block;
}

/* Flashcard Hero Button */
.swab-flashcard-hero-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 24rpx;
  padding: 16rpx 32rpx;
  min-width: 280rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border: 4rpx solid #000000;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  animation: pulse 2s ease-in-out infinite;
}

.swab-flashcard-icon {
  font-size: 36rpx;
}

.swab-flashcard-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* Quick Actions Section */
.swab-quick-actions {
  padding: 16rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-card {
  background: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 6rpx 6rpx 0 #000000;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  overflow: hidden;
}

.action-card:active {
  transform: translate(3rpx, 3rpx);
  box-shadow: 3rpx 3rpx 0 #000000;
}

.action-card-primary {
  background: #000000;
}

.action-card-primary .action-title,
.action-card-primary .action-desc,
.action-card-primary .action-count {
  color: #ffffff;
}

.action-card-primary .action-arrow {
  color: #ffffff;
}

.action-icon-large {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  display: block;
}

.action-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #000000;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.action-desc {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.action-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-count {
  font-size: 22rpx;
  font-weight: 600;
  color: #999999;
}

.action-arrow {
  font-size: 32rpx;
  font-weight: 900;
  color: #000000;
}

/* Tips Section */
.swab-tips-section {
  padding: 24rpx 48rpx 24rpx;
  background: #f8f8f8;
}

.tips-header {
  margin-bottom: 24rpx;
}

.tips-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  display: block;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  display: flex;
  gap: 20rpx;
  background: #ffffff;
  border: 3rpx solid #000000;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 4rpx 4rpx 0 rgba(0, 0, 0, 0.1);
}

.tip-number {
  width: 56rpx;
  height: 56rpx;
  background: #000000;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 900;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  display: block;
}

.tip-desc {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.5;
  display: block;
}

/* Main Content */
.swab-content {
  padding: 0 0 32rpx;
}

/* Article Display */
.swab-article {
  background: #ffffff;
  margin-bottom: 32rpx;
}

.swab-article-image {
  width: 100%;
  height: 600rpx;
  object-fit: cover;
}

.swab-article-body {
  padding: 64rpx 48rpx;
}

.swab-article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
  gap: 24rpx;
}

.swab-tag {
  display: inline-block;
  padding: 20rpx 40rpx;
  background: #000000;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 800;
  border-radius: 12rpx;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.swab-copy-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: #f0f0f0;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 12rpx;
  color: #000000;
}

.swab-article-title {
  display: block;
  font-size: 72rpx;
  font-weight: 900;
  color: #000000;
  line-height: 1.1;
  margin-bottom: 64rpx;
  letter-spacing: -2rpx;
}

/* Sections */
.swab-sections {
  display: flex;
  flex-direction: column;
  gap: 64rpx;
}

.swab-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.swab-section-image {
  width: 100%;
  height: 500rpx;
  border-radius: 24rpx;
  object-fit: cover;
  background: #f0f0f0;
}

.swab-section-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.swab-section-intro {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1.6;
  color: #000000;
}

.swab-subpoints {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.swab-subpoint {
  font-size: 36rpx;
  line-height: 1.7;
  color: #333333;
  padding-left: 0;
}

.subpoint-text {
  font-weight: 500;
}

/* References */
.swab-references {
  margin-top: 80rpx;
  padding-top: 48rpx;
  border-top: 8rpx solid #000000;
}

/* Scroll to Top Button */
.swab-scroll-top-container {
  padding: 48rpx 48rpx 32rpx;
  display: flex;
  justify-content: center;
}

.swab-scroll-top-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  background: #000000;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 100rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
}

.swab-scroll-top-btn::after {
  border: none;
}

.swab-scroll-top-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.scroll-icon {
  font-size: 32rpx;
  font-weight: 900;
  line-height: 1;
}

.scroll-text {
  font-size: 28rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.swab-ref-title {
  display: block;
  font-size: 56rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 40rpx;
  letter-spacing: -1rpx;
  text-transform: uppercase;
}

.swab-ref-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.swab-ref-item {
  background: #f8f8f8;
  padding: 32rpx;
  border-radius: 16rpx;
  border-left: 8rpx solid #000000;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.swab-ref-content {
  flex: 1;
  min-width: 0;
}

.swab-ref-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 12rpx;
}

.swab-ref-link {
  display: block;
  font-size: 28rpx;
  color: #666666;
  word-break: break-all;
}

.swab-ref-copy {
  flex-shrink: 0;
  width: 88rpx;
  height: 88rpx;
  background: #000000;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  cursor: pointer;
}

.swab-ref-copy:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* Loading State */
.swab-loading {
  padding: 80rpx 48rpx;
  text-align: center;
}

.swab-loader-ring {
  width: 120rpx;
  height: 120rpx;
  border: 12rpx solid #f0f0f0;
  border-top-color: #000000;
  border-radius: 50%;
  margin: 0 auto 48rpx;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@keyframes gentlePulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.03);
    opacity: 0.95;
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.5);
  }
}

@keyframes gentleFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

@keyframes wiggle {
  0%, 100% {
    transform: rotate(-3deg);
  }
  50% {
    transform: rotate(3deg);
  }
}

.swab-loading-title {
  display: block;
  font-size: 64rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 24rpx;
  letter-spacing: -1rpx;
  text-transform: uppercase;
}

.swab-loading-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 16rpx;
}

.swab-loading-detail {
  display: block;
  font-size: 36rpx;
  color: #666666;
  margin-bottom: 64rpx;
}

.swab-tip-btn {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  background: #f0f0f0;
  border-radius: 100rpx;
  margin: 0 auto 24rpx;
  animation: shake 3s ease-in-out infinite;
  cursor: pointer;
}

@keyframes shake {
  0%, 50%, 100% {
    transform: translateX(0);
  }
  55%, 65%, 75%, 85%, 95% {
    transform: translateX(-6rpx);
  }
  60%, 70%, 80%, 90% {
    transform: translateX(6rpx);
  }
}

.tip-icon {
  font-size: 48rpx;
}

.tip-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
}

.swab-tip-card {
  background: #fffbeb;
  border: 4rpx solid #000000;
  padding: 40rpx;
  border-radius: 20rpx;
  max-width: 600rpx;
  margin: 0 auto;
}

.tip-card-text {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.6;
  color: #000000;
  font-style: italic;
}

/* Floating Tips Card */
.swab-tips-card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.swab-tips-card {
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border: 8rpx solid #000000;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s ease;
  overflow: hidden;
}

.swab-tips-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 4rpx solid #000000;
}

.swab-tips-card-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.swab-tips-card-icon {
  font-size: 48rpx;
}

.swab-tips-card-category {
  font-size: 32rpx;
  font-weight: 900;
  color: #ffffff;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.swab-tips-card-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.swab-tips-card-counter {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.swab-tips-card-close {
  width: 64rpx;
  height: 64rpx;
  background: #ffffff;
  color: #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 700;
}

.swab-tips-card-content {
  padding: 48rpx 40rpx;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.swab-flashcard-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.swab-flashcard-label {
  font-size: 24rpx;
  font-weight: 900;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.swab-tips-card-text {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.6;
  color: #000000;
  text-align: left;
}

.swab-answer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  background: #000000;
  border-radius: 16rpx;
  margin: 16rpx 0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.swab-answer-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.swab-answer-btn-text {
  font-size: 32rpx;
  font-weight: 800;
  color: #ffffff;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.swab-answer-btn-icon {
  font-size: 28rpx;
  color: #ffffff;
}

.swab-flashcard-answer {
  display: none;
  flex-direction: column;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 4rpx solid #f0f0f0;
  animation: slideDown 0.3s ease;
}

.swab-flashcard-answer.show {
  display: flex;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.swab-answer-text {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.7;
  color: #333333;
  text-align: left;
}

.swab-tips-card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  background: #f8f8f8;
  border-top: 4rpx solid #000000;
}

.swab-tips-nav-btn {
  width: 88rpx;
  height: 88rpx;
  color: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 900;
}

.swab-tips-counter {
  font-size: 36rpx;
  font-weight: 800;
  color: #000000;
  letter-spacing: 1rpx;
}

.swab-tips-hint {
  padding: 20rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  border-top: 2rpx solid #f0f0f0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.swab-tips-nav-btn:active,
.swab-tips-card-close:active {
  transform: scale(0.9);
  opacity: 0.8;
}

/* Error State */
.swab-error {
  text-align: center;
  padding: 120rpx 48rpx;
}

.error-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.error-text {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #ff3b30;
  line-height: 1.5;
}

/* Section Divider */
.swab-section-divider {
  padding: 16rpx 0;
  background: #ffffff;
}

.divider-line {
  height: 2rpx;
  background: #e0e0e0;
  margin: 0 48rpx;
}

/* Category Chips - Wrapped Grid */
.swab-categories {
  padding: 32rpx 48rpx 24rpx;
  background: #ffffff;
  border-top: 8rpx solid #000000;
}

.swab-categories-header {
  margin-bottom: 20rpx;
  text-align: center;
}

.swab-categories-title {
  font-size: 44rpx;
  font-weight: 900;
  color: #000000;
  display: block;
  margin-bottom: 12rpx;
}

.swab-categories-subtitle {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  display: block;
}

.swab-category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

.swab-category-chip {
  display: inline-flex;
  flex-shrink: 0;
  padding: 16rpx 28rpx;
  background: #ffffff;
  border: 4rpx solid #000000;
  font-size: 24rpx;
  font-weight: 800;
  color: #000000;
  border-radius: 100rpx;
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.swab-category-chip.active {
  background: #000000;
  color: #ffffff;
}

/* Custom Input */
.swab-input-section {
  padding: 24rpx 48rpx 32rpx;
  background: #ffffff;
}

.swab-input-label {
  margin-bottom: 20rpx;
}

.input-label-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  display: block;
}

.swab-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.swab-input {
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  border: 6rpx solid #000000;
  border-radius: 24rpx;
  padding: 0 100rpx 0 32rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #000000;
  box-sizing: border-box;
}

.swab-input-placeholder {
  color: #999999;
  font-weight: 600;
}

.swab-input-clear {
  position: absolute;
  right: 32rpx;
  width: 72rpx;
  height: 72rpx;
  background: #000000;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
}

.swab-input-hint {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-top: 24rpx;
}

/* Bottom Action Bar */
.swab-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 8rpx solid #000000;
  padding: 32rpx 48rpx 48rpx;
  z-index: 100;
}

.swab-bar-content {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.swab-nav-group {
  display: flex;
  gap: 12rpx;
}

.swab-nav-btn {
  width: 120rpx;
  height: 120rpx;
  background: #000000;
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 900;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swab-generate-btn {
  flex: 1;
  height: 120rpx;
  background: #000000;
  color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.generate-text {
  font-size: 36rpx;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.swab-cancel-btn {
  flex: 1;
  height: 120rpx;
  background: #ff3b30;
  color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-text {
  font-size: 40rpx;
  font-weight: 900;
  text-transform: uppercase;
}

.swab-searching-btn {
  flex: 2;
  height: 120rpx;
  background: #e8e8e8;
  border: 6rpx solid #000000;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.searching-text {
  font-size: 40rpx;
  font-weight: 900;
  color: #000000;
  text-transform: uppercase;
}

/* Active States */
.swab-category-chip:active,
.swab-input-clear:active,
.swab-generate-btn:active,
.swab-nav-btn:active,
.swab-cancel-btn:active,
.swab-action-btn:active,
.swab-copy-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* Floating Action Buttons */
.floating-actions {
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  z-index: 1000;
  opacity: 0;
  transform: translateY(-20rpx);
  transition: opacity 0.3s ease, transform 0.3s ease;
  pointer-events: none;
}

.floating-actions.visible {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.floating-btn {
  width: 88rpx;
  height: 88rpx;
  background: #000000;
  border: 4rpx solid #000000;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
}

.floating-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.floating-btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* Streaming Content Styles */
.swab-streaming-section {
  margin-top: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.streaming-sections-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.streaming-section-card {
  background: rgba(0, 0, 0, 0.03);
  border: 3rpx solid #000000;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  min-height: 200rpx;
  animation: fadeInUp 0.3s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.streaming-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.streaming-section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  flex: 1;
}

.streaming-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  animation: pulse 1.5s ease-in-out infinite;
}

.status-dot.streaming {
  background: #FF9500;
  box-shadow: 0 0 0 4rpx rgba(255, 149, 0, 0.2);
}

.status-dot.completed {
  background: #34C759;
  animation: none;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #666666;
}
