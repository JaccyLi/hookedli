/* SwabTheWorld Inspired Design - Bold & High Contrast - Matching Index Page */

/* Design Tokens */
page {
  background: #ffffff;
}

/* Container */
.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0 48rpx 200rpx;
  box-sizing: border-box;
  position: relative;
}

/* Header Section */
.header {
  text-align: center;
  padding: 100rpx 0 48rpx;
  animation: fadeInDown 0.6s ease;
  border-bottom: 8rpx solid #000000;
  margin: 0 -48rpx 48rpx -48rpx;
  padding: 100rpx 48rpx 48rpx 48rpx;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.title {
  display: block;
  font-size: 72rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 16rpx;
  letter-spacing: -2rpx;
  text-transform: uppercase;
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: #666666;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  line-height: 1.3;
}

/* Unified Section */
.unified-section {
  background: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 6rpx 6rpx 0 #000000;
  animation: fadeInUp 0.6s ease 0.2s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Recommendation Tip */
.recommendation-tip {
  background: #fffbeb;
  border: 4rpx solid #000000;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
  box-shadow: 4rpx 4rpx 0 rgba(0, 0, 0, 0.1);
}

.tip-icon {
  font-size: 40rpx;
  flex-shrink: 0;
  line-height: 1;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
  line-height: 1.3;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  font-weight: 500;
}

/* Section Header within unified section */
.section-header {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 4rpx solid #000000;
}

.section-title {
  display: block;
  font-size: 44rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
  text-transform: uppercase;
}

.section-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  font-weight: 500;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* Model Selection - Card-based */
.model-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.hidden-radio {
  display: none;
}

.model-card {
  display: block;
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.2s ease;
  cursor: pointer;
  box-shadow: 4rpx 4rpx 0 #000000;
}

.model-card:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 #000000;
}

.model-card.active {
  background: #000000;
  border-color: #000000;
  box-shadow: 6rpx 6rpx 0 #000000;
}

.model-card.active .model-name,
.model-card.active .model-desc,
.model-card.active .tag {
  color: #ffffff;
}

.model-card.active .tag-quality,
.model-card.active .tag-speed,
.model-card.active .tag-recommended,
.model-card.active .tag-best,
.model-card.active .tag-slowest {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.3);
  color: #ffffff;
}

.model-card-content {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  gap: 20rpx;
}

.model-icon-wrapper {
  flex-shrink: 0;
  width: 88rpx;
  height: 88rpx;
  background: #000000;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
}

.model-card.active .model-icon-wrapper {
  background: #ffffff;
  transform: scale(1.05);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.3);
}

.model-icon {
  font-size: 44rpx;
}

.model-card.active .model-icon {
  filter: none;
}

.model-details {
  flex: 1;
  min-width: 0;
  max-width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

.model-name {
  font-size: 36rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 8rpx;
  line-height: 1.2;
  word-break: break-word;
  overflow-wrap: break-word;
  letter-spacing: -0.5rpx;
}

.model-subname {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 8rpx;
}

/* Model Tags */
.model-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 12rpx;
  line-height: 1.4;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-quality {
  background: #000000;
  color: #ffffff;
  border: 2rpx solid #000000;
}

.tag-speed {
  background: #ff9500;
  color: #ffffff;
  border: 2rpx solid #ff9500;
}

.tag-recommended {
  background: #34c759;
  color: #ffffff;
  border: 2rpx solid #34c759;
  font-weight: 800;
}

.tag-best {
  background: #af52de;
  color: #ffffff;
  border: 2rpx solid #af52de;
  font-weight: 800;
}

.tag-slowest {
  background: #ff3b30;
  color: #ffffff;
  border: 2rpx solid #ff3b30;
  font-weight: 800;
}

.model-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  word-break: break-word;
  overflow-wrap: break-word;
  font-weight: 500;
}

.model-indicator {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 4rpx solid #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  background: #ffffff;
}

.model-indicator.active {
  border-color: #ffffff;
  background: #ffffff;
}

.indicator-dot {
  width: 0;
  height: 0;
  border-radius: 50%;
  background: #000000;
  transition: all 0.2s ease;
}

.model-card.active .indicator-dot {
  width: 24rpx;
  height: 24rpx;
  background: #000000;
}

.model-card.active .model-indicator.active {
  border-color: #000000;
}

.model-card.active .model-indicator.active .indicator-dot {
  background: #000000;
}

/* Button Container */
.button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 32rpx 48rpx 48rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-top: 8rpx solid #000000;
  z-index: 100;
}

.back-btn {
  width: 100%;
  height: 120rpx;
  background: #000000;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 900;
  border: none;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.2s ease;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.back-btn::after {
  border: none;
}

.back-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.back-btn-icon {
  font-size: 40rpx;
  font-weight: 900;
  transition: all 0.2s ease;
}

.back-btn:active .back-btn-icon {
  transform: translateX(-4rpx);
}

.back-btn-text {
  font-size: 36rpx;
  font-weight: 900;
  letter-spacing: 1rpx;
}

/* Active States */
.model-card:active,
.back-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* Smooth Transitions */
button,
.model-card {
  -webkit-tap-highlight-color: transparent;
}
