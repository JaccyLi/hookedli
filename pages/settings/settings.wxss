/* pages/settings/settings.wxss */

/* Container */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 16rpx 200rpx;
  box-sizing: border-box;
  position: relative;
}

/* Header Section */
.header {
  text-align: center;
  padding: 100rpx 0 48rpx;
  animation: fadeInDown 0.6s ease;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.title {
  display: block;
  font-size: 64rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: -0.5rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
  letter-spacing: 0.2rpx;
}

/* Unified Section */
.unified-section {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s ease 0.2s both;
}

/* Notice within unified section */
.section-notice {
  background: rgba(102, 126, 234, 0.08);
  border: 2rpx solid rgba(102, 126, 234, 0.15);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 28rpx;
  position: relative;
  overflow: hidden;
}

.section-notice::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.notice-icon {
  display: block;
  font-size: 36rpx;
  margin-bottom: 12rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  50% {
    transform: scale(1.1) rotate(5deg);
  }
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: 0.3rpx;
}

.notice-text {
  display: block;
  font-size: 24rpx;
  color: #424245;
  line-height: 1.5;
  font-weight: 400;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* Recommendation Tip */
.recommendation-tip {
  background: rgba(255, 204, 0, 0.1);
  border: 2rpx solid rgba(255, 204, 0, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  line-height: 1;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #b38b00;
  line-height: 1.3;
}

.tip-text {
  font-size: 24rpx;
  color: #8a6d00;
  line-height: 1.5;
}

/* Section Header within unified section */
.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: -0.3rpx;
}

.section-desc {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  line-height: 1.5;
  font-weight: 400;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* Model Selection - Card-based */
.model-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.hidden-radio {
  display: none;
}

.model-card {
  display: block;
  width: 100%;
  box-sizing: border-box;
  background: #f5f5f7;
  border: 2rpx solid #e5e5ea;
  border-radius: 18rpx;
  overflow: hidden;
  transition: all 0.2s ease;
  cursor: pointer;
}

.model-card:active {
  transform: scale(0.98);
}

.model-card.active {
  background: linear-gradient(135deg, #667eea08 0%, #764ba208 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.15);
}

.model-card-content {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  gap: 16rpx;
}

.model-icon-wrapper {
  flex-shrink: 0;
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.model-card.active .model-icon-wrapper {
  transform: scale(1.05);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.4);
}

.model-icon {
  font-size: 36rpx;
  filter: brightness(1.1);
}

.model-details {
  flex: 1;
  min-width: 0;
  max-width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

.model-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 4rpx;
  line-height: 1.2;
  word-break: break-word;
  overflow-wrap: break-word;
}

.model-subname {
  font-size: 24rpx;
  font-weight: 500;
  color: #667eea;
  margin-bottom: 8rpx;
}

/* Model Tags */
.model-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 8rpx;
  line-height: 1.4;
}

.tag-quality {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.tag-speed {
  background: rgba(255, 149, 0, 0.1);
  color: #ff9500;
  border: 1rpx solid rgba(255, 149, 0, 0.2);
}

.tag-recommended {
  background: rgba(52, 199, 89, 0.15);
  color: #34c759;
  border: 1rpx solid rgba(52, 199, 89, 0.3);
  font-weight: 600;
}

.tag-best {
  background: rgba(175, 82, 222, 0.15);
  color: #af52de;
  border: 1rpx solid rgba(175, 82, 222, 0.3);
  font-weight: 600;
}

.tag-slowest {
  background: rgba(255, 59, 48, 0.15);
  color: #ff3b30;
  border: 1rpx solid rgba(255, 59, 48, 0.3);
  font-weight: 600;
}

.model-desc {
  font-size: 24rpx;
  color: #86868b;
  line-height: 1.4;
  word-break: break-word;
  overflow-wrap: break-word;
}

.model-indicator {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 3rpx solid #e5e5ea;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.model-indicator.active {
  border-color: #667eea;
  background: #667eea;
}

.indicator-dot {
  width: 0;
  height: 0;
  border-radius: 50%;
  background: #ffffff;
  transition: all 0.2s ease;
}

.model-indicator.active .indicator-dot {
  width: 22rpx;
  height: 22rpx;
}

/* Button Container */
.button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 32rpx 48rpx 48rpx;
  box-sizing: border-box;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.02) 100%);
  z-index: 100;
}

.back-btn {
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
  letter-spacing: 0.3rpx;
}

.back-btn::after {
  border: none;
}

.back-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.back-btn-icon {
  font-size: 36rpx;
  font-weight: 700;
  transition: all 0.2s ease;
}

.back-btn:active .back-btn-icon {
  transform: translateX(-4rpx);
}

.back-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* Smooth Transitions */
button, .model-card {
  -webkit-tap-highlight-color: transparent;
}

/* Debug Mode Section */
.debug-mode-card {
  background: #ffffff;
  border: 4rpx solid #000000;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.debug-mode-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.debug-mode-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.debug-mode-icon {
  font-size: 48rpx;
  line-height: 1;
}

.debug-mode-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.debug-mode-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: 0.5rpx;
}

.debug-mode-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* Switch styling */
switch {
  transform: scale(0.9);
}
